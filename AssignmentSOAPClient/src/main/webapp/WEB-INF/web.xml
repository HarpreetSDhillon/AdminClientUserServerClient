<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>AddMovie</servlet-name>
        <servlet-class>AddMovie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewLiberary</servlet-name>
        <servlet-class>ViewLibrary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModMovie</servlet-name>
        <servlet-class>ModMovie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMovie</servlet-name>
        <url-pattern>/AddMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewLiberary</servlet-name>
        <url-pattern>/ViewLiberary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModMovie</servlet-name>
        <url-pattern>/ModMovie</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
